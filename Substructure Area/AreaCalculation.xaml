<Window x:Class="Substructure_Area.areaCalculation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Substructure_Area"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Title="Substructure Area">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>

            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="27*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>

            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>


        </Grid.RowDefinitions>

        <Button x:Name="Elements_Selection" 
                Content="Select Element" Grid.Column="1"
                Grid.Row="2" Margin="1,9.8,23.1,170.2" 
                Click="Element_Selection_Click" Grid.ColumnSpan="2" Grid.RowSpan="2"   >
        </Button>

        <DataGrid x:Name="datagrid" 
                  AutoGenerateColumns="True" 
                  Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="5" Margin="3.9,9.8,44,170.2" Grid.RowSpan="2"  >
        </DataGrid>
        <ListBox x:Name="Select_Family" Grid.Column="1"
                 Grid.Row="3" Margin="1,10.2,23.1,0.2"
                 SelectionMode="Extended" AllowDrop="True" Height="auto" Grid.ColumnSpan="2">

            <ListBox.Resources>
                <Style TargetType="ListBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName = Receive_Level,
                            Path= (Validation.HasError)}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.Resources>

        </ListBox>
        <Button x:Name="Cancel" Content="Cancel" Grid.Column="2" 
                Grid.Row="4" Click="Cancel_Click" 
                Margin="0,0.6,0.6,0.2" 
                Grid.ColumnSpan="4" HorizontalAlignment="Right" 
                Grid.RowSpan="2" Width="38"  >

        </Button>

        
    </Grid>

</Window>
